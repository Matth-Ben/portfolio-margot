{% macro default(data) %}
    {% import "@components/image.twig" as image %}

    <section class="my-xxxl">
        <div class="container container--custom">
            {{ image.default(data.image, '', 'full', 'full-mobile') }}
        </div>
        <div class="container mt-l lg:mt-m">
            <div class="grid grid-cols-8 lg:grid-cols-12 gap">
                <div class="col-span-7 lg:col-span-6 col-start-2 lg:col-start-7">
                    <div class="ts-h3 text-primary">{{ data.text }}</div>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}