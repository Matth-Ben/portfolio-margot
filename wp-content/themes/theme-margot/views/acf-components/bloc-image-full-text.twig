{% macro default(data) %}
    {% import "@components/image.twig" as image %}

    <section class="my-xxxl">
        <div class="container container--custom" show-elements>
            {{ image.default(data.image, '', 'full', 'full-mobile', true) }}
        </div>
        <div class="container mt-l lg:mt-m">
            <div class="grid grid-cols-8 lg:grid-cols-12 gap">
                <div class="col-span-7 lg:col-span-6 col-start-2 lg:col-start-7" show-elements>
                    <div class="ts-h3 text-primary split animation--text" show-element>{{ data.text }}</div>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}