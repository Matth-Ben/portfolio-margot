{% extends "base-default.twig" %}

{% import "@components/image.twig" as image %}

{% block pageContent %}
    <div class="projects">
        <div class="canvasContainer !fixed">
            <canvas class="canvas"></canvas>
        </div>

        {% for key, item in realisations %}
            <a class="project-item sticky top-[15rem] col-span-8 lg:col-span-10 col-start-1 lg:col-start-2" href="{{ item.link }}">
                <div class="project-item--content relative" show-elements>
                    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-20 w-full text-center text-white">
                        <div class="ts-custom2">{% if key < 10 %}0{% endif %}{{ key + 1 }}</div>
                        <h2 class="ts-title-big uppercase split animation--text" show-element>{{ item.title }}</h2>
                        <div class="block lg:hidden mt-l">
                            <div class="button button--light mx-auto">DÃ©couvrir</div>
                        </div>
                    </div>
                    <div class="project-item--content-img relative overflow-hidden">
                        {{ image.default(item.thumbnail, '', 'full', 'full-mobile', false) }}
                    </div>
                </div>
            </a>
        {% endfor %}
	</div>
{% endblock %}
